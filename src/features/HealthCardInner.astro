---
interface Props {
    text: string;
    cardClass: string;
    iconClass: string;
}
---
<div class={`${Astro.props.cardClass} rounded-md shadow-md relative overflow-hidden`}>
    <div class={`absolute -left-12 md:-left-8 rounded-full w-24 h-20 flex items-center justify-center ${Astro.props.iconClass} z-10`}>
        <div class="w-16 h-16 rotate-12 ml-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
            </svg>
        </div>
    </div>
    <div class="p-4 flex flex-col items-end text-white">
        <div class="text-xs uppercase">
            <small>Health Status</small>
        </div>
        <div class="text-lg font-semibold">
            {Astro.props.text}
        </div>
    </div>
</div>